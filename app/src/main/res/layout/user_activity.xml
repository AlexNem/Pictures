<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/user_profile_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/ic_photo_size_select_actual_black_24dp" />

    <Button
        android:id="@+id/btn_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_profile_image"
        android:layout_centerHorizontal="true"
        android:text="follow" />

    <LinearLayout
        android:id="@+id/user_btn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/btn_follow">

        <Button
            android:text="photo"
            android:layout_weight="1"
        android:id="@+id/btn_user_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

        <Button
            android:text="likes"
            android:layout_weight="1"
            android:id="@+id/btn_user_likes"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:layout_weight="1"
            android:text="collections"
            android:id="@+id/btn_user_collections"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_profile_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/user_btn_container">

    </LinearLayout>





</RelativeLayout>